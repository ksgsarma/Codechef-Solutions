#include <stdio.h>
void func();
int main() {
    int a;
    scanf("%d", &a);
    while(a > 0)
    {
        func();
        a--;
    }
    return 0;
}
void func()
{
    long int x,y;
    scanf("%ld", &x);
    y = 0;
    while(x > 0)
    {
        y = y + x * x;
        x = x - 2;
    }
    printf("%ld\n", y);
}

